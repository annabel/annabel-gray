.work-block
  %h2#work.section-title Recent Work
  .triangle

  .container-fluid
    .work-row
      .project-column.flo.hover-tile-outer
        .hover-tile-container
          .hover-tile.hover-tile-visible
            = image_tag "flo.png"
            %button.btn.work-info-button
              .glyphicon.glyphicon-plus.flo
          .hover-tile.hover-tile-hidden.flo
            .tile-content
              .work-name Flo Music
              = link_to "View Site", "http://flomusic.com/", class: "btn flo-btn", target: "_blank"
              .header Skills strengthened:
              .skills Wordpress, PHP, HTML5, SASS, JavaScript, Bootstrap, Grunt
